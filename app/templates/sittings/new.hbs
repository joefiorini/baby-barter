<h2>Add a Swap</h2>

<form {{action "save" on="submit"}}>

<label>
  Requested By
{{view Ember.Select contentBinding="families"
       optionValuePath="content.id"
       optionLabelPath="content.displayName"}}
</label>

<label>
  Performed on
  {{date-picker value=performedOn}}
</label>
  {{performedOn}}

<label>
  Started At
  {{time-picker value=startedAtTime}}
</label>
{{startedAtTime}}

<label>
  Finished At
  {{time-picker value=finishedAtTime}}
</label>
{{finishedAtTime}}

{{#ladda-button style="zoom-in" color="blue" size="s" action="save"}}Save{{/ladda-button}}
</form>
